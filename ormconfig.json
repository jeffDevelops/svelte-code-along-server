{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "database": "svelteFacts",
  "synchronize": false,
  "migrationsRun": true,
  "logging": false,
  "keepConnectionAlive": true,
  "entities": [
      "src/entity/*.ts" 
  ],
  "migrations": [
      "src/migrations/*.ts"
  ],
  "cli": {
      "entitiesDir": "src/entity",
      "migrationsDir": "src/migrations"
  }
}